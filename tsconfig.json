{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2021",
        "lib": ["ES2020", "DOM"],
        "declaration": true,
        "outDir": "./dist/es6",
        "moduleResolution": "NodeNext",
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": ["src/***/**/*.ts"],
    "exclude": ["node_modules", "dist", "src/***/**/*.test.ts"]
}
