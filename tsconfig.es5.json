{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "lib": ["ES2022"],
        "moduleResolution": "Node",
        "declaration": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["src/***/**/*.ts"],
    "exclude": ["node_modules", "dist", "src/***/**/*.test.ts"]
}
